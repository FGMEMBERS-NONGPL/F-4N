<?xml version="1.0"?>

<PropertyList>

  <submodel>
    <name>jettison centerline fuel tank</name>
    <model>Aircraft/F-4N/Models/Stores/Tank_600/tank.ac</model>
    <trigger>fdm/jsbsim/systems/armament/release</trigger>
    <trigger-once>true</trigger-once>
    <z-offset> -2.0</z-offset>
    <speed>0</speed>
    <count>1</count>
    <eda>1.0</eda>
    <weight>250.0</weight>
    <cd>0.3</cd>
    <collision>false</collision>
    <impact>false</impact>
  </submodel>

  <submodel>
    <name>jettison left fuel tank</name>
    <model>Aircraft/F-4N/Models/Stores/Tank_370/tank.ac</model>
    <trigger>fdm/jsbsim/systems/armament/release</trigger>
    <trigger-once>true</trigger-once>
    <speed>0</speed>
    <count>1</count>
    <x-offset> -0.2</x-offset>
    <y-offset>-12.0</y-offset>
    <z-offset> -3.0</z-offset>
    <pitch-offset>-2</pitch-offset>
    <eda>1.0</eda>
    <weight>250.0</weight>
    <cd>0.3</cd>
    <collision>false</collision>
    <impact>false</impact>
  </submodel>

  <submodel>
    <name>jettison right fuel tank</name>
    <model>Aircraft/F-4N/Models/Stores/Tank_370/tank.ac</model>
    <trigger>fdm/jsbsim/systems/armament/release</trigger>
    <trigger-once>true</trigger-once>
    <speed>0</speed>
    <count>1</count>
    <x-offset> -0.2</x-offset>
    <y-offset> 12.0</y-offset>
    <z-offset> -3.0</z-offset>
    <pitch-offset>-2</pitch-offset>
    <eda>1.0</eda>
    <weight>250.0</weight>
    <cd>0.3</cd>
    <collision>false</collision>
    <impact>false</impact>
  </submodel>

  <!-- Drag Chute Jettison-->
  <submodel>
    <name>Braking Parachute</name>
    <model>Aircraft/DavePack/Stores/Chute/fullchute.ac</model>
    <trigger>controls/flight/chute_jettisoned</trigger>
    <speed>0</speed>
    <repeat>false</repeat>
    <count>1</count>
    <x-offset>-40</x-offset>
    <y-offset>0</y-offset>
    <z-offset>0</z-offset>
    <yaw-offset>0</yaw-offset>
    <pitch-offset>0</pitch-offset>
    <buoyancy>25</buoyancy>
    <wind>true</wind>
    <life>4.0</life> 
    <eda>250</eda>
    <weight>50</weight>
    <aero-stabilised>false</aero-stabilised>
  </submodel>


</PropertyList>
